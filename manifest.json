{
  "manifest_version": 2,

  "name": "NightScoutCGM",
  "description": "Report #cgmnow, run reports, and upload data to NightScout.",
  "version": "0.1.4.2",
  "app": {
    "background": {
      "scripts": ["app/background.js"]
    }
  },
  "permissions": [
    "serial",
    "storage",
    "<all_urls>",
    "notifications",
    {"fileSystem": ["write"]},
    "usb",
    {
      "usbDevices": [
        {
          "vendorId": 8867,
          "productId": 71
        }
      ]
    }
  ],
  "icons": {
    "16": "public/assets/icon.png",
    "128": "public/assets/icon.png"
  }
}
